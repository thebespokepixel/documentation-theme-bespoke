{
  "name": "documentation-theme-bespoke",
  "version": "1.1.6",
  "description": "A bespoke theme for documentation.js",
  "scripts": {
    "external-assets": "npm install --no-save ace-css anchor-js split.js typopro-web",
    "test": "xo && nyc ava",
    "readme": "compile-readme -u src/docs/example.md src/docs/readme.md > readme.md",
    "doc-build": "echo 'Building docs...'",
    "coverage": "nyc ava && nyc report --reporter=lcov --report-dir test/coverage; open test/coverage/lcov-report/index.html"
  },
  "main": "index.js",
  "files": [
    "assets",
    "parts",
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thebespokepixel/documentation-theme-bespoke.git"
  },
  "keywords": [
    "documentation",
    "documentation-theme",
    "theme"
  ],
  "author": "Mark Griffiths",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thebespokepixel/documentation-theme-bespoke/issues"
  },
  "homepage": "https://github.com/thebespokepixel/documentation-theme-bespoke",
  "dependencies": {
    "@thebespokepixel/badges": "^3.0.1",
    "concat-stream": "^2.0.0",
    "documentation": "^13.0.2",
    "github-slugger": "^1.3.0",
    "highlight.js": "^10.1.1",
    "lodash": "^4.17.20",
    "remark": "^12.0.0",
    "remark-heading-gap": "^3.1.2",
    "remark-squeeze-paragraphs": "^4.0.0",
    "vinyl": "^2.2.0",
    "vinyl-fs": "^3.0.3"
  },
  "peerDependencies": {
    "ace-css": "^1.1.0",
    "anchor-js": "^4.2.2",
    "split.js": "^1.5.11",
    "typopro-web": "^4.2.2"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@thebespokepixel/palette2oco": "^2.0.1",
    "ava": "^3.10.1",
    "babel-plugin-lodash": "^3.3.4",
    "gulp": "^4.0.2",
    "gulp-better-rollup": "^4.0.1",
    "gulp-clean": "^0.4.0",
    "gulp-rename": "^2.0.0",
    "gulp-stylus": "^2.7.0",
    "nib": "^1.1.2",
    "nyc": "^15.1.0",
    "rollup": "^2.21.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-uglify": "^6.0.4",
    "xo": "^0.32.1"
  },
  "ava": {
    "babel": true,
    "files": [
      "test/*.js"
    ]
  },
  "xo": {
    "semicolon": false,
    "esnext": true,
    "ignores": [
      "index.js",
      "gulpfile.js",
      "assets/**/*.js"
    ]
  },
  "engines": {
    "node": ">=10.0"
  },
  "badges": {
    "github": "thebespokepixel",
    "npm": "thebespokepixel",
    "name": "documentation-theme-bespoke",
    "codeclimate": "4ed3614ff0158165f61b",
    "providers": {
      "status": {
        "text": "production",
        "color": "green"
      }
    },
    "readme": {
      "Publishing Status": [
        [
          "status",
          "npm",
          "travis-com",
          "david"
        ]
      ],
      "Development Status": [
        [
          "travis-com-dev",
          "david-dev",
          "david-devdeps-dev"
        ],
        [
          "snyk",
          "code-climate",
          "code-climate-coverage"
        ]
      ],
      "Help": [
        "twitter"
      ]
    }
  }
}
