{
  "name": "documentation-theme-bespoke",
  "version": "0.2.1",
  "description": "A bespoke theme for documentation",
  "scripts": {
    "prepublish": "./scripts/install-components",
    "test": "xo && snyk test && nyc ava",
    "code-climate": "nyc report --reporter=text-lcov | codeclimate-test-reporter",
    "coverage": "nyc ava && nyc report --reporter=lcov --report-dir test/coverage; open test/coverage/lcov-report/index.html",
    "generate-test-fixtures": "scripts/generate-test-fixtures"
  },
  "main": "index.js",
  "files": [
    "assets",
    "parts",
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/documentationjs/documentation-theme-default.git"
  },
  "keywords": [
    "documentation",
    "documentation-theme",
    "theme"
  ],
  "author": "Mark Griffiths",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/documentationjs/documentation-theme-default/issues"
  },
  "homepage": "https://github.com/documentationjs/documentation-theme-default",
  "dependencies": {
    "anchor-js": "^3.2.1",
    "concat-stream": "^1.5.0",
    "documentation": "^4.0.0-beta10",
    "github-slugger": "^1.1.1",
    "highlight.js": "^9.0.0",
    "lodash": "4.16.4",
    "vinyl": "^2.0.0",
    "vinyl-fs": "^2.0.0"
  },
  "devDependencies": {
    "@thebespokepixel/cordial": "^0.17.0",
    "@thebespokepixel/oco-colorvalue-ex": "^0.2.0",
    "@thebespokepixel/palette2oco": "^0.1.1",
    "ace-css": "^1.1.0",
    "async": "^2.0.1",
    "autoprefixer": "^6.5.0",
    "ava": "^0.16.0",
    "codeclimate-test-reporter": "^0.4.0",
    "cssnano": "^3.7.6",
    "deep-assign": "^2.0.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-stylus": "^2.5.0",
    "nib": "^1.1.2",
    "nyc": "^8.3.0",
    "poststylus": "^0.2.3",
    "remark": "^6.0.1",
    "rollup-plugin-uglify": "^1.0.1",
    "shelljs": "^0.7.4",
    "snyk": "^1.19.1",
    "typopro-web": "^3.4.9",
    "xo": "^0.16.0"
  },
  "xo": {
    "semicolon": false,
    "esnext": true,
    "ignores": [
      "index.js",
      "assets/**/*.js",
      "src/assets/**/*.js"
    ]
  },
  "buildNumber": 0,
  "engines": {
    "node": ">=4.0 <7.0"
  }
}
