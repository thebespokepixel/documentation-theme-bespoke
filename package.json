{
  "name": "documentation-theme-bespoke",
  "version": "2.0.6",
  "description": "A bespoke theme for documentation.js",
  "scripts": {
    "build": "gulp",
    "external-assets": "npm install --no-save ace-css anchor-js split.js typopro-web",
    "test": "xo && c8 --reporter=text ava",
    "readme": "compile-readme -u src/docs/example.md src/docs/readme.md > readme.md",
    "doc-build": "echo 'Building docs...'",
    "coverage": "c8 --reporter=lcov ava; open test/coverage/lcov-report/index.html"
  },
  "main": "index.js",
  "files": [
    "assets",
    "parts",
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thebespokepixel/documentation-theme-bespoke.git"
  },
  "keywords": [
    "documentation",
    "documentation-theme",
    "theme"
  ],
  "author": "Mark Griffiths",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thebespokepixel/documentation-theme-bespoke/issues"
  },
  "homepage": "https://github.com/thebespokepixel/documentation-theme-bespoke",
  "dependencies": {
    "@thebespokepixel/badges": "^4.0.2",
    "concat-stream": "^2.0.0",
    "documentation": "^13.2.5",
    "github-slugger": "^1.4.0",
    "highlight.js": "^11.3.1",
    "lodash": "^4.17.21",
    "remark": "^14.0.1",
    "remark-gfm": "^3.0.0",
    "remark-heading-gap": "^5.0.0",
    "remark-html": "^15.0.0",
    "remark-squeeze-paragraphs": "^5.0.0",
    "unist-util-visit": "^4.1.0",
    "vinyl": "^2.2.1",
    "vinyl-fs": "^3.0.3"
  },
  "peerDependencies": {
    "ace-css": "^1.1.0",
    "anchor-js": "^4.2.2",
    "split.js": "^1.5.11",
    "typopro-web": "^4.2.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/stream": "^2.0.0",
    "@thebespokepixel/palette2oco": "^2.0.2",
    "ava": "^4.0.0-alpha.2",
    "c8": "^7.10.0",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-rename": "^2.0.0",
    "gulp-stylus": "^2.7.0",
    "gulp-terser": "^2.1.0",
    "nib": "^1.1.2",
    "rollup": "^2.58.3",
    "vinyl-source-stream": "^2.0.0",
    "xo": "^0.46.3"
  },
  "xo": {
    "semicolon": false,
    "ignores": [
      "index.js",
      "gulpfile.mjs",
      "assets/**/*.js"
    ]
  },
  "engines": {
    "node": ">=16.0"
  },
  "badges": {
    "github": "thebespokepixel",
    "npm": "thebespokepixel",
    "libraries-io": "TheBespokePixel",
    "name": "documentation-theme-bespoke",
    "codeclimate": "4ed3614ff0158165f61b",
    "providers": {
      "status": {
        "text": "production",
        "color": "green"
      }
    },
    "readme": {
      "Publishing Status": [
        [
          "status",
          "npm",
          "travis-com",
          "libraries-io-npm"
        ]
      ],
      "Development Status": [
        [
          "travis-com-dev",
          "libraries-io-github",
          "snyk",
          "code-climate"
        ]
      ],
      "Help": [
        "twitter"
      ]
    }
  }
}
